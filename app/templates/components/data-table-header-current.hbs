        Selected Area
      </th>
      <th colspan="{{if this.reliability "5" "2"}}" class="text-center cell-border-bottom">
        {{#if (and
          @compareToLabel
          (not @isModelLoading)
        )}}
          {{this.compareToLabel}}
        {{else}}
          <PageLoadAnimation />
        {{/if}}
      </th>
      <th colspan="{{if this.reliability "4" "2"}}" class="text-center cell-border-bottom">Difference</th>
    </tr>
