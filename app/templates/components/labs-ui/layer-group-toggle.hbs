<div class="layer-group-toggle-header layer-{{dasherize this.label}}">
  <div class="switch tiny">
    <input class="switch-input" type="checkbox" checked={{if this.active 'checked'}}>
    <label class="switch-paddle">
      <span class="show-for-sr">Toggle Layer Group</span>
    </label>
  </div>
  <span class="layer-group-toggle-label" role="button">
    {{this.label}}
  </span>
  <div class="layer-group-toggle-content">
    {{yield}}
  </div>
  {{#if (and (not this.hideIcon) this.active this.icon this.icon.layers this.icon.layers) }}
    {{#each this.icon.layers as |layerIcon index|}}
      {{#if (eq index 0)}}
      <span
        class="icon polygon legend-icon"
        style="background-color:{{layerIcon.stroke}};">
      </span>
      {{/if}}
    {{/each}}
  {{/if}}
</div>

