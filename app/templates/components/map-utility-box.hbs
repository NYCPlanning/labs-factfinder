{{#if (eq this.mode 'direct-select')}}
  {{#if (gt this.selectionCount 0)}}
    <div class="map-utility-box">
      <div class="map-utility-box-head"> 
        Your Selection
      </div>
      <div class="map-utility-box-body">
        <p><strong>12</strong> Neighborhoods (NTAs) selected</p>
        <hr />
        <p>Content here</p>
      </div>
      <div class="map-utility-box-buttons">
        <button id="clear-selection" class="button--clear-selection button" type="button" {{action this.clearSelection}}>
          <span class="dcp-orange">
            {{fa-icon icon='times'}}
          </span>
          Clear <br />Selection
        </button>
        <button id="see-more-data" class="button orange" type="button" onClick={{action this.generateProfile}}>
          See More Data
          <span class="off-white">
            {{fa-icon icon='times'}}
          </span>
        </button>
      </div>
      
    </div>
  {{else}}
    <div class="map-utility-box">
      <div class="map-utility-box-head"> 
        Your Selection
      </div>
      <div class="map-utility-box-body-null">
        <p><strong>Want To Add To Your Selection?</strong></p>
        <p>You can build your selection by selecting the options in the <span class="orange">orange</span> menu above and clicking directly on the map</p>
      </div>
    </div>
  {{/if}}
{{else}}
  {{component this.mode}}
{{/if}}

{{yield}}
